<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woodbackgrnd"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.triva.HomeActivity" >

    <TextView
        android:id="@+id/TitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Trivia Fun "
        android:textColor="#00FF00"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/BtnComputers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:background="@drawable/rounded"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Computers" />

    <TextView
        android:id="@+id/OrTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BtnComputers"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Or"
        android:textColor="#FFFF00"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BtnComputers"
        android:layout_below="@+id/OrTextView"
        android:layout_marginTop="18dp"
        android:text="Video Games"
        android:textColor="#1E669B"
        android:background="@drawable/rounded"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/CatagoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BtnComputers"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Select Catagory "
        android:textColor="#00FF00"
        android:textSize="25dp"
        android:textStyle="bold" />

</RelativeLayout>